# Base Configuration
NEXT_PUBLIC_BASE_URL=https://your-deployer-website.com
NEXT_PUBLIC_SITE_NAME=Baileys Bot Deployer
NEXT_PUBLIC_DEFAULT_MODE=public

# Deployment Settings
DEPLOYMENTS_DIR=/var/www/deployments
MAX_CONCURRENT_DEPLOYMENTS=10
MAX_DEPLOYMENT_AGE_DAYS=7

# Security
SESSION_SECRET=your_strong_production_secret_here
ADMIN_API_KEY=your_strong_admin_api_key_here
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX=100

# WhatsApp Connection
WHATSAPP_API_TIMEOUT=30000
WHATSAPP_MAX_RETRIES=3

# Logging
LOG_LEVEL=info
LOG_RETENTION_DAYS=30

# Email Notifications
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
NOTIFICATION_EMAIL=admin@yourdomain.com

# Database
DATABASE_URL=mongodb+srv://username:password@cluster0.example.mongodb.net/baileys-deployer?retryWrites=true&w=majority

# Bot Defaults
DEFAULT_PREFIX=.
DEFAULT_AUTO_LIKE_EMOJI=ðŸ«¨
DEFAULT_STATUS=online
